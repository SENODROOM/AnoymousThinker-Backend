# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection String
# Example: mongodb+srv://<user>:<password>@cluster.mongodb.net/dbname
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_any_long_random_string

# Groq API Key (High-performance inference)
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face API Token (Free/Serverless inference)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI Model Configurations
# Comparison Model (Powerful model like Llama 3.3 70B)
COMPARISON_MODEL=llama-3.3-70b-versatile

# Primary Chat Model (Llama 3.1 8B or similar)
HUGGINGFACE_MODEL=meta-llama/Llama-3.1-8B-Instruct

# Admin Credentials (Initial setup)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password
